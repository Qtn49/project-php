<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block titre %}Le super blog{% endblock %}</title>
    {% block style %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="../app/templates/style/inscription.css" >
        <link rel="stylesheet" href="../app/templates/style/style.css" >
        <link rel="stylesheet" href="../app/templates/style/connexion.css" >
    {% endblock %}
</head>
<body>

{% set prenom = session['prenom'] %}
{% set nom = session['nom'] %}

<header>
    {% block header %}
    <div id="menu">
        <ul>
            <li><a href="index.php"><b>Bababoui</b></a></li>
            {% if prenom is not empty and nom is not empty %}
                <li>Bienvenue {{ prenom ~ ' ' ~ nom }} </li>
            {% endif %}
            {% if session is empty %}
                <div id="boutons">
                    <a href="?action=connexion" class="btn btn-outline-success float-right align-middle m-2">Connexion</a>
                    <a href="?action=inscription" class="btn btn-outline-primary float-right align-middle m-2">S'inscrire</a>
                {% else %}
                    <a href="?action=deconnexion" class="btn btn-outline-danger float-right align-middle m-2">Déconnexion</a></li>
                </div>
            {% endif %}
        </ul>
    </div>
    {% endblock %}
</header>

{% block content %}
{% endblock %}

<footer>
    {% block footer %}
    <div id="footer">
        <b>
            <a href="https://www.twitter.com">Twitters</a>
            <a href="https://www.instagram.com">Instagram</a>
            <a href="https://www.youtube.com">Youtube</a>
            <a href="https://www.discord.com">Discord</a>
            <a href="https://play.google.com/store/apps/details?id=com.theog.mastermind2020">Meilleur jeu android au monde</a>
        </b>
        <p>Bababoui© 2020 - Bababoui, tous droits réservés</p>
    </div>
    {% endblock %}
</footer>

{% block script %}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/d3js/6.1.1/d3.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
{% endblock %}

</body>
</html>
